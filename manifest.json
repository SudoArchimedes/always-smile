{
  "manifest_version": 2,

  "name": "Always Smile",
  "description": "Redirect all www.amazon.com requests to smile.amazon.com.",
  "version": "1.1",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://www.amazon.com/*"
  ],
  "background": {
    "scripts": ["redirect.js"]
  },
  "icons": {
    "128": "icon_128.png"
   }
}